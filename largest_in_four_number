public class Main
{
	public static void main(String[] args) {
 int a = 5, b = 10,
        c = 15, d = 20, max;
        
    max = (a > b && a > c && a > d) ?
              a : ((b > c && b > d) ?
              b : (c > d ? c : d));
              
    System.out.println("Largest number among " +
                      a + ", " + b + ", "+ c +
             " and " + d + " is " + max + ". " );
}
}
