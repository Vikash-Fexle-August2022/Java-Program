public class Main
{
	public static void main(String[] args) {
	        String s="Vikash is a student";
	        String a[]=s.split(" ");
	        int count=0;
	        for(String b:a)
	        {
	            System.out.println(b);
	            count++;
	        }
	        System.out.println("Total number of words in this String   "+count); 
	}
}
